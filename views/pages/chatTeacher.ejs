
<% include ../partials/head %>

  <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper" id ="wrapper">

      <header class="main-header">
        <% include ../partials/header %>
      </header>

      <aside class="main-sidebar">
        <% include ../partials/aside %>
      </aside>
      <!-- =================================  CONTENT =================================================== -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Chat
            <small>Chat interno de la clase</small>
          </h1>
          <ol class="breadcrumb">
            <li>
              <a href="/perfil">
                <i class="fa fa-dashboard"></i> Home</a>
            </li>
          </ol>
        </section>
        <!-- Main content -->
        <section class="content">

          <!-- Default box -->
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Chat de clase</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                  <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                  <i class="fa fa-times"></i>
                </button>
              </div>
            </div>
            <!-- data table classrooms-->
            <div class="box-body">
              <div class="box">
                <div class="box-header">
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                  <section class="section">
                    <input id="idClase" type="hidden" value="<%-idClase%>"></input>
                    <input id="userMail" type="hidden" value="<%-user.email%>"></input>
                    <input id="yourName" type="hidden" value="<%-user.email%>"></input>
                
                    <div class="chatscreen" id = "chatscreen">
                
                      <ul class="chats">
                        <!-- The chat messages will go here -->
                      </ul>
                
                    </div>
                   </section>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                      <form id="chatform">              
                          <textarea class="form-control" id = "message" required="true" maxlength="500" rows="3" placeholder="Write something..."></textarea>
                          <input type="submit" id="m" value="SEND" />
                      </form>
                    </div>
                    <!-- /.box-footer -->
                  </form>
                </div>
              </div>

            </div>
            <!-- /.box-body -->
            <!-- /.box-footer-->
          </div>
          <!-- /.box -->

        </section>
        <!-- /.content -->
      </div>
      <!-- ==================================  CONTENT =================================================== -->
      <footer class="main-footer">
        <% include ../partials/footer %>
      </footer>

      <aside class="control-sidebar control-sidebar-dark">
        <% include ../partials/sidebar%>
      </aside>

      <div class="control-sidebar-bg"></div>
    </div>

    <script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script src="../chat.js"> </script>
    <script src="../moment.min.js"></script>
    <% include ../partials/tail %>