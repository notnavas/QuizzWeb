<% include ../partials/head %>

    <body class="hold-transition skin-blue sidebar-mini">
        <div class="wrapper">

            <header class="main-header">
                <% include ../partials/header %>
            </header>

            <aside class="main-sidebar">
                <% include ../partials/aside %>
            </aside>
            <!-- =================================  CONTENT =================================================== -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <h1>
                        Generar Test
                        <small>Generar test con ejercicios aceptados previamente</small>
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <a href="/perfil">
                                <i class="fa fa-dashboard"></i> Home</a>
                        </li>
                    </ol>
                </section>
                <!-- Main content -->
                <section class="content">

                    <!-- Default box -->
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">Generar Test</h3>

                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <!-- data table classrooms-->
                        <div class="box-body">
                            <div class="box">
                                <div class="box-header">
                                </div>
                                <!-- /.box-header -->
                                <div class="box-body">
                                    <form role="form" action="/generarTest" method="post" >
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label for="contenidosConEjs">Contenidos con ejercicios sin test.</label>
                                                  <select class="form-control" id="contenidosConEjs" name="contenidosConEjs">
                                                      <% contentsConEjs.forEach(function(valor,indice){%>
                                                        <% 	var contentJSON = JSON.stringify(valor); %>
                                                    <option value='<%- contentJSON %>'>
                                                      <%- valor.name%>
                                                    </option>
                                                    <%})%>
                                                  </select>
                                              </div>
                                            <div class="form-group">
                                                <label>NÃºmero de ejercicios sin test del contenido seleccionado: </label>
                                                <div id = "numEjsContent">
                                                    <p>Seleccione un contenido</p>
                                                </div>
                                               
                                            </div>
                                            <div id = "numEjsAniadir1">
                                                <select class="form-control" id="numEjercicios" name="numEjercicios" required = "true">
                                                    <option disabled>Por favor elija un contenido</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <input type="hidden" name="seccionDelContenido" value="">
                                            </div>
                                            <% if (errores !=""){%>
                                                <div class="form-group">
                                                    <div class="col-sm-10">
                                                        <div class="error">
                                                            <p>
                                                                <%-errores %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% }%>

                                        </div>
                                        <!-- /.box-body -->
                                        <div class="box-footer">
                                            <button type="submit" class="btn btn-primary">Generar Test</button>
                                        </div>
                                    </form>
                                </div>
                            </div>

                        </div>
                        <!-- /.box-body -->


                        <div class="box-footer">
                          
                        </div>
                        <!-- /.box-footer-->
                    </div>
                    <!-- /.box -->

                </section>
                <!-- /.content -->
            </div>
            <!-- ==================================  CONTENT =================================================== -->
            <footer class="main-footer">
                <% include ../partials/footer %>
            </footer>

            <aside class="control-sidebar control-sidebar-dark">
                <% include ../partials/sidebar%>
            </aside>

            <div class="control-sidebar-bg"></div>
        </div>


        <% include ../partials/tail %>