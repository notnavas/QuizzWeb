<% include ../partials/head %>

  <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

      <header class="main-header">
        <% include ../partials/header %>
      </header>

      <aside class="main-sidebar">
        <% include ../partials/aside %>
      </aside>
      <!-- =================================  CONTENT =================================================== -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            AÃ±adir clase
            <small>Crea una nueva clase</small>
          </h1>
          <ol class="breadcrumb">
            <li>
              <a href="/perfil">
                <i class="fa fa-dashboard"></i> Home</a>
            </li>
          </ol>
        </section>
        <!-- Main content -->
        <section class="content">

          <!-- Default box -->
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Nueva clase</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                  <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                  <i class="fa fa-times"></i>
                </button>
              </div>
            </div>
            <!-- data table classrooms-->
            <div class="box-body">
              <div class="box">
                <div class="box-header">
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                  <form class="form-horizontal" action="/crearClase" method="post">
                    <div class="box-body">
                      <div class="form-group">
                        <label for="nombreClase" class="col-sm-2 control-label">Nombre</label>

                        <div class="col-sm-10">
                          <input type="text" class="form-control" required="true" maxlength="50" name="nombreClase" id="nombreClase" placeholder="Nombre de la clase">
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="cursoClase" class="col-sm-2 control-label">Curso</label>
                        <div class="col-sm-10">
                          <select class="form-control" id="cursoClase" name="cursoClase">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                          </select>
                        </div>
                      </div>
                      <% if (code !=""){%>
                        <div class="form-group">
                          <div class="col-sm-10">
                            <div class="success">
                              <p>
                                <%-code %>
                              </p>
                            </div>
                          </div>
                        </div>
                        <% }%>
                          <% if (errores !=""){%>
                            <div class="form-group">
                              <div class="col-sm-10">
                                <div class="error">
                                  <p>
                                    <%-errores %>
                                  </p>
                                </div>
                              </div>
                            </div>
                            <% }%>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                      <button type="submit" class="btn btn-info pull-right">Crear</button>
                    </div>
                    <!-- /.box-footer -->
                  </form>
                </div>
              </div>

            </div>
            <!-- /.box-body -->


            <div class="box-footer">

            </div>
            <!-- /.box-footer-->
          </div>
          <!-- /.box -->

        </section>
        <!-- /.content -->
      </div>
      <!-- ==================================  CONTENT =================================================== -->
      <footer class="main-footer">
        <% include ../partials/footer %>
      </footer>

      <aside class="control-sidebar control-sidebar-dark">
        <% include ../partials/sidebar%>
      </aside>

      <div class="control-sidebar-bg"></div>
    </div>


    <% include ../partials/tail %>