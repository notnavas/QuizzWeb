<% include ../partials/head %>

  <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

      <header class="main-header">
        <% include ../partials/header %>
      </header>

      <aside class="main-sidebar">
        <% include ../partials/aside %>
      </aside>
      <!-- =================================  CONTENT =================================================== -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Solicitudes Pendientes
            <small>Muestra las solicitudes de contenido o ejercicios pendientes de respuesta.</small>
          </h1>
          <ol class="breadcrumb">
            <li>
              <a href="/perfil">
                <i class="fa fa-dashboard"></i> Home</a>
            </li>
          </ol>
        </section>
        <!-- Main content -->
        <section class="content">

          <!-- Default box -->
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Solicitudes</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                  <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                  <i class="fa fa-times"></i>
                </button>
              </div>
            </div>
            <!-- data table classrooms-->
            <div class="box-body">
              <div class="box">
                <div class="box-header">
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                  <div class="row">

                    <!-- /.col -->
                 
                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a href="#exRequest" data-toggle="tab">Solicitudes de ejercicios</a>
                                </li>
                                <li>
                                    <a href="#contRequest" data-toggle="tab">Solicitudes de contenidos</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="active tab-pane" id="exRequest">
                                    <div class="box box-primary">
                                        <div class="box-header with-border">
                                            <h3 class="box-title">Solicitudes de ejercicios pendientes de validación. </h3>
                                        </div>
                                        <div class="box-body">
                                            <div class="table-responsive">
                                                <table id="tablaSolicitudesEj" class="table table-bordered table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th style="display:none;">id</th>
                                                            <th>Usuario</th>
                                                            <th>Seccion/Tema del ejercicio</th>
                                                            <th>Contenido/autor del ejercicio</th>
                                                            <th>Tipo de ejercicio</th>
                                                            <th>Ejercicio</th>
                                                            <th>Aceptar/rechazar</th>
                                                            <!--<th>imagen</th>-->
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% arrayEjerciciosFinal.forEach(function(valor, indice){%>
                                                            <tr role="row" class="odd">
                                                                <td style="display:none;">
                                                                    <%-valor.id%>
                                                                </td>
                                                                <td>
                                                                    <%- valor.idUser %>
                                                                </td>
                                                                <td>
                                                                    <%-valor.seccionContenido %>
                                                                </td>
                                                                <td>
                                                                    <%-valor.nombreContenido %>
                                                                </td>
                                                                <td>
                                                                    <%-valor.type %>
                                                                </td>
                                                                <td>
                                                                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#descripcionEj<%- indice %>">
                                                                        Descripción
                                                                    </button>
                                                                    <div class="modal modal-info fade" id="descripcionEj<%- indice %>" style="display: none;">
                                                                        <div class="modal-dialog">
                                                                            <div class="modal-content">
                                                                                <div class="modal-header">
                                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                                        <span aria-hidden="true">×</span>
                                                                                    </button>
                                                                                    <h4 class="modal-title">Ejercicio</h4>
                                                                                </div>
                                                                                <div class="modal-body">
                                                                                    <!--  <img src="<%- valor.image %>"/> -->
                                                                                    <p>
                                                                                        <%- valor.visualizacion %>
                                                                                    </p>
                                                                                </div>
                                                                                <div class="modal-footer">
                                                                                    <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
                                                                                </div>
                                                                            </div>
                                                                            <!-- /.modal-content -->
                                                                        </div>
                                                                        <!-- /.modal-dialog -->
                                                                    </div>

                                                                </td>
                                                                <td>
                                                                    <row>
                                                                        <div class="col-xs-6">
                                                                            <form role="form" action="/aceptarSolicitudEjercicio" method="post">
                                                                                <% valorSTR = JSON.stringify(valor)%>
                                                                                    <input class="form-control" name="solEjAceptado" type="hidden" value='<%- valorSTR %>'>
                                                                                    <button type="submit" class="btn btn-success">Aceptar</button>
                                                                            </form>
                                                                        </div>
                                                                        <div class="col-xs-6">
                                                                            <form role="form" action="/rechazarSolicitudEjercicio" method="post">
                                                                                <% valorSTR = JSON.stringify(valor)%>
                                                                                    <input class="form-control" name="solEjRechazado" type="hidden" value='<%- valorSTR %>'>
                                                                                    <button type="submit" class="btn btn-danger">Rechazar</button>
                                                                            </form>
                                                                        </div>

                                                                    </row>
                                                                </td>
                                                                <!--<td><%-valor.image%></td>-->
                                                            </tr>
                                                            <%})%>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.box-header -->
                                </div>
                                <!-- /.box -->
                                <div class="tab-pane" id="contRequest">
                                    <div class="box box-primary">
                                        <div class="box-header with-border">
                                            <h3 class="box-title">Solicitudes de contenidos pendientes de validación. </h3>
                                        </div>
                                        <div class="box-body">
                                            <div class="table-responsive">
                                                <table id="tablaSolicitudesCont" class="table table-bordered table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th style="display:none;">id</th>
                                                            <th>Usuario</th>
                                                            <th>Nombre/autor del contenido</th>
                                                            <th>Seccion/Tema del contenido</th>
                                                            <th>Link </th>
                                                            <th>Descripcion</th>
                                                            <th>Aceptar/rechazar</th>
                                                            <!--<th>imagen</th>-->
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% solicitudesContenido.forEach(function(valor, indice){%>
                                                            <tr role="row" class="odd">
                                                                <td style="display:none;">
                                                                    <%-valor.id%>
                                                                </td>
                                                                <td>
                                                                    <%- valor.idUserReq %>
                                                                </td>
                                                                <td>
                                                                    <%-valor.name %>
                                                                </td>
                                                                <td>
                                                                    <%-valor.sectionName %>
                                                                </td>
                                                                <td>
                                                                    <%-valor.link %>
                                                                </td>
                                                                <td>
                                                                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#descripcionCont<%- indice %>">
                                                                        Descripción
                                                                    </button>
                                                                    <div class="modal modal-info fade" id="descripcionCont<%- indice %>" style="display: none;">
                                                                        <div class="modal-dialog">
                                                                            <div class="modal-content">
                                                                                <div class="modal-header">
                                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                                        <span aria-hidden="true">×</span>
                                                                                    </button>
                                                                                    <h4 class="modal-title">Contenido</h4>
                                                                                </div>
                                                                                <div class="modal-body">
                                                                                    <!--  <img src="<%- valor.image %>"/> -->
                                                                                    <p>
                                                                                        <%- valor.description %>
                                                                                    </p>
                                                                                </div>
                                                                                <div class="modal-footer">
                                                                                    <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
                                                                                </div>
                                                                            </div>
                                                                            <!-- /.modal-content -->
                                                                        </div>
                                                                        <!-- /.modal-dialog -->
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <row>
                                                                        <div class="col-xs-6">
                                                                            <form role="form" action="/aceptarSolicitudContenido" method="post">
                                                                                <% valorSTR = JSON.stringify(valor)%>
                                                                                    <input class="form-control" name="solContAceptado" type="hidden" value='<%- valorSTR %>'>
                                                                                    <button type="submit" class="btn btn-success">Aceptar</button>
                                                                            </form>
                                                                        </div>
                                                                        <div class="col-xs-6">
                                                                            <form role="form" action="/rechazarSolicitudContenido" method="post">
                                                                                <% valorSTR = JSON.stringify(valor)%>
                                                                                    <input class="form-control" name="solContRechazado" type="hidden" value='<%- valorSTR %>'>
                                                                                    <button type="submit" class="btn btn-danger">Rechazar</button>
                                                                            </form>
                                                                        </div>

                                                                    </row>
                                                                </td>
                                                                <!--<td><%-valor.image%></td>-->
                                                            </tr>
                                                            <%})%>
                                                    </tbody>
                                                </table>
                                            </div>

                                        </div>
                                    </div>
                                    <!-- /.box-header -->
                                </div>
                            </div>
                            <!-- /.tab-pane -->

                            <!-- /.tab-content -->
                        </div>
                        <!-- /.nav-tabs-custom -->
               
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                </div>
              </div>

            </div>
            <!-- /.box-body -->


            <div class="box-footer">

            </div>
            <!-- /.box-footer-->
          </div>
          <!-- /.box -->

        </section>
        <!-- /.content -->
      </div>
      <!-- ==================================  CONTENT =================================================== -->
      <footer class="main-footer">
        <% include ../partials/footer %>
      </footer>

      <aside class="control-sidebar control-sidebar-dark">
        <% include ../partials/sidebar%>
      </aside>

      <div class="control-sidebar-bg"></div>
    </div>


    <% include ../partials/tail %>