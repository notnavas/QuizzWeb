<% include ../partials/head %>

    <body class="hold-transition skin-blue sidebar-mini">
        <div class="wrapper">

            <header class="main-header">
                <% include ../partials/headerStudent %>
            </header>

            <aside class="main-sidebar">
                <% include ../partials/asideStudent %>
            </aside>
            <!-- =================================  CONTENT =================================================== -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <h1>
                        Perfil de usuario
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <a href="/index">
                                <i class="fa fa-dashboard"></i> Home</a>
                        </li>
                    </ol>
                </section>

                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <div class="col-md-3">
                            <!-- Profile Image -->
                            <div class="box box-primary">
                                <div class="box-body box-profile">
                                    <img class="profile-user-img img-responsive img-circle" src="img/avatar5.png" alt="User profile picture">

                                    <h3 class="profile-username text-center">
                                        <%- user.name %>
                                    </h3>

                                    <p class="text-muted text-center">
                                        <%- user.email %>
                                    </p>

                                    <ul class="list-group list-group-unbordered">
                                        <li class="list-group-item">
                                            <b>Ejercicios resueltos:</b>
                                            <a class="pull-right"><%- estadisticas.estadisticasQuestions.length %></a>
                                        </li>
                                        <li class="list-group-item">
                                            <b>Nota media:</b>
                                            <a class="pull-right" id = "notaMediaPerfil"></a>
                                        </li>
                                        <li class="list-group-item">
                                            <b>Contribuciones:</b>
                                            <a class="pull-right">
                                                <%- (contribuciones.contrEjercicios.length + contribuciones.contrContenidos.length) %>
                                            </a>
                                        </li>
                                        <li class="list-group-item">
                                            <b>Clases</b>
                                            <a class="pull-right">
                                                <%- clases.length %>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->

                            <!-- About Me Box -->
                            <div class="box box-primary">
                                <div class="box-header with-border">
                                    <h3 class="box-title">About Me</h3>
                                </div>
                                <!-- /.box-header -->
                                <div class="box-body">
                                    <strong>
                                        <i class="fa fa-book margin-r-5"></i> Clases</strong>

                                    <% clases.forEach(function(valor, indice){%>

                                        <p>
                                            <span class="label label-success">
                                                <%- valor.name %>
                                            </span>
                                        </p>


                                        <%})%>


                                </div>
                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->
                        </div>
                        <% 	var contributionsJSON = JSON.stringify(contribuciones); %>
                            <p id="contribucionesHidden" hidden="true">
                                <%- contributionsJSON %>
                            </p>
                            <% 	var statsJSON = JSON.stringify(estadisticas); %>
                            <p id="estadisticasHidden" hidden="true">
                                <%- statsJSON %>
                            </p>
                            <!-- /.col -->
                            <div class="col-md-9">
                                <div class="nav-tabs-custom">
                                    <ul class="nav nav-tabs">
                                        <li class="active">
                                            <a href="#estadisticasStud" data-toggle="tab">Estadisticas</a>
                                        </li>
                                        <li>
                                            <a href="#aportacionesStud" data-toggle="tab">Aportaciones</a>
                                        </li>
                                    </ul>
                                    <div class="tab-content">
                                        <div class="active tab-pane" id="estadisticasStud">
                                            <div class="row">
                                                <div class="col-md-10">
                                                    <!-- Bar CHART -->
                                                    <div class="box box-danger">
                                                        <div class="box-header with-border">
                                                            <h3 class="box-title">Estadisticas de contenidos (nota media):</h3>

                                                            <div class="box-tools pull-right">
                                                                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                                                    <i class="fa fa-minus"></i>
                                                                </button>
                                                                <button type="button" class="btn btn-box-tool" data-widget="remove">
                                                                    <i class="fa fa-times"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                        <div class="box-body">

                                                            <canvas id="statBarChartSTD" style="height:250px"></canvas>
                                                            <h3 id=""></h3>
                                                        </div>
                                                        <!-- /.box-body -->
                                                    </div>
                                                    <!-- /.box -->

                                                </div>
                                                <!-- /.col (LEFT) -->

                                            </div>
                                            <!-- /.row -->

                                        </div>
                                        <!-- /.tab-pane -->
                                        <div class="tab-pane" id="aportacionesStud">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <!-- DONUT CHART -->
                                                    <div class="box box-danger">
                                                        <div class="box-header with-border">
                                                            <h3 class="box-title">Contribuciones:
                                                                <%- (contribuciones.contrEjercicios.length + contribuciones.contrContenidos.length) %>
                                                            </h3>

                                                            <div class="box-tools pull-right">
                                                                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                                                    <i class="fa fa-minus"></i>
                                                                </button>
                                                                <button type="button" class="btn btn-box-tool" data-widget="remove">
                                                                    <i class="fa fa-times"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                        <div class="box-body">

                                                            <canvas id="contrPieChartSTD" style="height:250px"></canvas>
                                                            <h3 id="porcentajeContrAceptadosChart"></h3>
                                                        </div>
                                                        <!-- /.box-body -->
                                                    </div>
                                                    <!-- /.box -->

                                                </div>
                                                <!-- /.col (LEFT) -->

                                            </div>
                                            <!-- /.row -->
                                        </div>
                                        <!-- /.box -->
                                    </div>
                                    <!-- /.box-body -->
                                </div>
                            </div>
                    </div>
                    <!-- /.tab-content -->
            </div>
            <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
        </div>
        <!-- /.row -->

        </section>
        <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- ==================================  CONTENT =================================================== -->
        <footer class="main-footer">
            <% include ../partials/footer %>
        </footer>

        <aside class="control-sidebar control-sidebar-dark">
            <% include ../partials/sidebar%>
        </aside>

        <div class="control-sidebar-bg"></div>
        </div>

        <% include ../partials/tail %>
            <script src="charts.js"></script>